section.content
  .container
    .well
      form.form-horizontal(name="signupForm")
        fieldset
          legend Let's create an account for you
          .form-group
            label.col-md-2.control-label(for="firstName") First Name
            .col-md-10
              input.form-control(name="firstName", type="text", placeholder="First Name", ng-model="firstName", required)
          .form-group
            label.col-md-2.control-label(for="lastName") Last Name
            .col-md-10
              input.form-control(name="lastName", type="text", placeholder="Last Name", ng-model="lastName", required)
          .form-group
            label.col-md-2.control-label(for="email") Email/Username
            .col-md-10
              input.form-control(name="email", type="email", placeholder="Email which will be used as your username", ng-model="email", required)
          .form-group
            label.col-md-2.control-label(for="password") Password
            .col-md-10
              input.form-control(name="password", type="password", placeholder="Password", ng-model="password", required)
          .form-group
            .col-md-10.col-md-offset-2
              .pull-right
                a.btn.btn-default(href="/") Cancel
                | &nbsp;
                button.btn.btn-primary(ng-click="signup()", ng-disabled="signupForm.$invalid") Create Account